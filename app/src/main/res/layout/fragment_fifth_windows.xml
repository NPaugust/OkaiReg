<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FifthWindows">


    <View
        android:layout_width="40dp"
        android:layout_height="80dp"

        android:layout_marginTop="648dp"
        android:background="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="692dp"
        android:background="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="103dp"
        android:layout_height="219dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="428dp"
        android:background="@drawable/img_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="109dp"
        android:layout_height="84dp"
        android:layout_marginStart="320dp"
        android:background="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="112dp"
        android:layout_height="225dp"
        android:background="@drawable/img_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:text="С возвращением в OKAi!"
        android:textColor="@color/dark_purple"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:hint="Ваше имя"
        android:padding="6dp"
        android:textColorHint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_2" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/et_pink_six"
        android:padding="6dp"
        android:layout_marginTop="18dp"
        android:drawableStart="@drawable/ic_outline_lock_24"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/text_corner"
        app:layout_constraintTop_toBottomOf="@id/et_name_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Пароль"
        android:textColorHint="@color/light_grey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_click_two"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pink_six"
        android:textColor="@color/dark_purple"
        android:textSize="16dp"
        android:text="Войти"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_forgot_your_password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_click_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Забыли пароль?"
        android:textColor="@color/light_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="У вас ещё нет аккаунта?"
        android:textColor="@color/light_grey"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Зарегистрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>