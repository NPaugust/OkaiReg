<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <View
        android:layout_width="95dp"
        android:layout_height="277dp"
        android:layout_marginTop="432dp"
        android:background="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="91dp"
        android:layout_height="114dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="108dp"
        android:layout_height="178dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/img_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="39dp"
        android:layout_height="18dp"
        android:layout_marginStart="224dp"
        android:background="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="50dp"
        android:layout_height="93dp"
        android:background="@drawable/img_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_to_okai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:text="Добро пожаловать в OKAi!"
        android:textColor="@color/dark_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reg_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Зарегистрируйте ваш аккаунт"
        android:textColor="@color/dark_purple"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_to_okai" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:hint="Ваше имя"
        android:textColorHint="@color/light_grey"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_account" />

    <EditText
        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/et_email"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:hint=" comand@example.com"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableStart="@drawable/baseline_call"
        android:id="@+id/number_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/white"
        android:hint="Номер телефона"
        android:textColorHint="@color/light_grey"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email" />

    <EditText
        android:id="@+id/et_pink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_outline_lock_24"
        android:hint="Пароль"
        android:textColorHint="@color/light_grey"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_phone" />

    <EditText
        android:drawableStart="@drawable/ic_outline_lock_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_pink_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_pink"
        android:hint="Повторить пароль"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:textColorHint="@color/light_grey"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/yellow"
        android:text="Зарегистрироваться"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pink_two" />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="или"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_click" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="11dp"
        android:text="У вас уже есть аккаунт? "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_or" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="80dp"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_or" />

</androidx.constraintlayout.widget.ConstraintLayout>