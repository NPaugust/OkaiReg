<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SixthWindows">

    <View
        android:layout_width="95dp"
        android:layout_height="277dp"
        android:layout_marginTop="432dp"
        android:background="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="91dp"
        android:layout_height="114dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="108dp"
        android:layout_height="178dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/img_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="39dp"
        android:layout_height="18dp"
        android:layout_marginStart="224dp"
        android:background="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="50dp"
        android:layout_height="93dp"
        android:background="@drawable/img_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:id="@+id/tv_forgot_your_password_second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/dark_purple"
        android:textSize="24sp"
        android:text="Забыли пароль?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_your_number_sms"
        android:layout_width="308dp"
        android:layout_height="38dp"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:text="Укажите ваш номер телефона для получения смс-кода"
        android:textColor="@color/dark_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password_second" />

    <EditText
        android:drawableStart="@drawable/ic_outline_lock_24"
        android:id="@+id/et_email_two"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="coman@example.com"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@id/tv_your_number_sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/white"
        android:padding="6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_receive_code"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/et_email_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        android:text="Получить код"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:text="У вас ещё нет аккаунта?"
        android:textColor="@color/light_grey"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_receive_code" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="216dp"
        app:layout_constraintTop_toBottomOf="@id/btn_receive_code"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Зарегистрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>