<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondWindows">
    <View
        android:layout_width="95dp"
        android:layout_height="277dp"
        android:layout_marginTop="432dp"
        android:background="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="91dp"
        android:layout_height="114dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/img_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="108dp"
        android:layout_height="178dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/img_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="39dp"
        android:layout_height="18dp"
        android:layout_marginStart="224dp"
        android:background="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="50dp"
        android:layout_height="93dp"
        android:background="@drawable/img_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_name_2"
        android:layout_marginTop="228dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:text="С возвращением в OKAi!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:backgroundTint="@color/white"
        android:layout_marginTop="28dp"
        android:padding="6dp"
        android:id="@+id/et_name_2"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:layout_marginEnd="16dp"
        android:textColorHint="@color/light_grey"
        android:layout_marginStart="16dp"
        android:background="@drawable/text_corner"
        app:layout_constraintTop_toBottomOf="@id/tv_name_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Ваше имя"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/et_pink_three"
        android:padding="6dp"
        android:layout_marginTop="28dp"
        android:drawableStart="@drawable/ic_outline_lock_24"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColorHint="@color/light_grey"
        android:background="@drawable/text_corner"
        app:layout_constraintTop_toBottomOf="@id/et_name_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Пароль"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_click_two"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pink_three"
        android:textColor="@color/dark_purple"
        android:textSize="16dp"
        android:text="Войти"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_forgot_your_password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_click_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Забыли пароль?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="У вас ещё нет аккаунта?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Зарегистрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>